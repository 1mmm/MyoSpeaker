<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
    <TextView
        android:id="@+id/myo1name"
        android:text="@string/locked"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="top|center_horizontal">

    </TextView>



    <TextView
        android:id="@+id/myo1acc"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical|center_horizontal">

    </TextView>
    <TextView
        android:id="@+id/myo1gyr"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical|center_horizontal">
    </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/myo2name"
        android:text="@string/locked"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="top|center_horizontal"></TextView>


    <TextView
        android:id="@+id/myo2acc"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical|center_horizontal">
    </TextView>
    <TextView
        android:id="@+id/myo2gyr"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical|center_horizontal">
    </TextView>
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:id="@+id/pos"
        android:gravity="center_vertical|center_horizontal"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="words"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/start"
            android:text="parses"
            android:background="#1daf97"
            android:textColor="#000000"/>
        <Button
            android:layout_weight="1"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="10dp"
            android:background="#1daf97"
            android:id="@+id/stop"
            android:text="words"
            android:textColor="#000000"
            android:layout_height="30dp" />

    </LinearLayout>
</LinearLayout>
